@model MyPawDiaryApp.Models.OneTimeActivity

@{
    ViewBag.Title = "Add One-Time Activity";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewBag.Title for @ViewBag.PetName</h2>

    @using (Html.BeginForm("CreateOneTime", "Activities", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PetId)

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Activity name", required = "required" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Notes, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = 3, placeholder = "Optional notes..." })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.DateAndTime, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.DateAndTime, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
                    @Html.ValidationMessageFor(m => m.DateAndTime, "", new { @class = "text-danger" })
                </div>

                <div class="form-check mb-3">
                    @Html.CheckBoxFor(m => m.isCompleted, new { @class = "form-check-input", id = "isCompleted" })
                    @Html.LabelFor(m => m.isCompleted, "Mark as completed", new { @class = "form-check-label" })
                </div>

                <div class="d-flex justify-content-end">
                    <a href="@Url.Action("Index", "Feed")" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Add Activity</button>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();
    </script>
}
