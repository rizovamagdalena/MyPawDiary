@model MyPawDiaryApp.Models.Pet
@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "Add New Pet";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Pets", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Pet Info</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        Pet Name
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter pet's name" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        Species
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Species, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Species, new { @class = "form-control", placeholder = "e.g. Dog, Cat" })
            @Html.ValidationMessageFor(m => m.Species, "", new { @class = "text-danger" })
        </div>

        Breed
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Breed, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Breed, new { @class = "form-control", placeholder = "Enter breed" })
            @Html.ValidationMessageFor(m => m.Breed, "", new { @class = "text-danger" })
        </div>

        Date of Birth
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.DateOfBirth, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
        </div>

        Gender
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Gender, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Male", "Female" }), "Select Gender", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>

        Photo URL
        <div class="form-group mb-3">
            @Html.Label("Pet Photo", htmlAttributes: new { @class = "control-label" })
            <input type="file" name="PetPhoto" class="form-control" />
            @Html.ValidationMessage("PetPhoto", "", new { @class = "text-danger" })
        </div>

        Hidden OwnerId
        @Html.HiddenFor(m => m.OwnerId, new { Value = User.Identity.GetUserId() })

        <div class="form-group">
            <input type="submit" value="Add Pet" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    </div>
}

