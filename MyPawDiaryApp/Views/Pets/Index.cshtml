@model IEnumerable<MyPawDiaryApp.Models.Pet>

@{
    ViewBag.Title = "My Pets";
}

<h2 class="mb-4 text-center">My Pets</h2>

<p class="text-center mb-4">
    @Html.ActionLink("Add New Pet", "Create", null, new { @class = "btn btn-paw" })
</p>

<div class="row">
    @foreach (var pet in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="@(!string.IsNullOrEmpty(pet.Photo) ? pet.Photo : "https://via.placeholder.com/300x200?text=No+Photo")"
                     class="card-img-top" alt="@pet.Name"
                     style="height:200px; object-fit:cover;" />
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title text-center">@pet.Name</h5>
                    <div class="d-flex justify-content-center mt-3">
                        @Html.ActionLink("View", "Details", new { id = pet.Id }, new { @class = "btn btn-outline-primary me-2" })
                        @*@Html.ActionLink("Edit", "Edit", new { id = pet.Id }, new { @class = "btn btn-outline-secondary" })*@
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .btn-paw {
        background-color: #ff85a2;
        color: white;
        padding: 10px 20px;
        border-radius: 30px;
        font-size: 1em;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .btn-paw:hover {
            background-color: #ff6186;
            color: white;
        }

    .card {
        border-radius: 15px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

    .card-title {
        font-weight: bold;
        font-size: 1.25rem;
    }
</style>
